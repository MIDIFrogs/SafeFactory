<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:SafeFactory.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:SafeFactory.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		WindowState="Maximized"
        x:Class="SafeFactory.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="SafeFactory">
	<DockPanel>
		<!-- Верхняя менюшка -->
		<Menu DockPanel.Dock="Top">
			<MenuItem Header="_File">
				<MenuItem Header="_Import" Command="{Binding ExitCommand}"/>
				<MenuItem Header="_Export" Command="{Binding ExitCommand}"/>
				<MenuItem Header="_Exit" Command="{Binding ExitCommand}"/>
			</MenuItem>
		</Menu>
		<!-- Основное содержимое окна -->
		<views:MainView />
	</DockPanel>
</Window>